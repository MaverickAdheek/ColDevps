@page
@model ParkinLot.App.Frontend.Pages.EditarAuxiliarModel
@{
}
<h1>Editar auxiliar</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Auxiliar.Nombres" class="col-sm-2">Nombres</label>
        <input asp-for="Auxiliar.Nombres" class="from-control">
        <span class="text-danger" asp-validation-for="Auxiliar.Nombres"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Auxiliar.Apellidos" class="col-sm-2">Apellidos</label>
        <input asp-for="Auxiliar.Apellidos" class="from-control">
        <span class="text-danger" asp-validation-for="Auxiliar.Apellidos"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Auxiliar.Documento" class="col-sm-2">Documento</label>
        <input asp-for="Auxiliar.Documento" class="from-control" required>
        <span class="text-danger" asp-validation-for="Auxiliar.Documento"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Auxiliar.Usuario" class="col-sm-2">Usuario</label>
        <input asp-for="Auxiliar.Usuario" class="from-control" required>
        <span class="text-danger" asp-validation-for="Auxiliar.Usuario"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Auxiliar.Contrasena" class="col-sm-2">Contraseña</label>
        <input asp-for="Auxiliar.Contrasena" class="from-control" required>
        <span class="text-danger" asp-validation-for="Auxiliar.Contrasena"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Auxiliar.CodigoEmpleado" class="col-sm-2">Código empleado</label>
        <input asp-for="Auxiliar.CodigoEmpleado" class="from-control" required>
        <span class="text-danger" asp-validation-for="Auxiliar.CodigoEmpleado"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Editar</button>
        <a asp-page="./ListaAuxiliares" class="btn btn-primary">Cancelar</a>
    </div>
</form>
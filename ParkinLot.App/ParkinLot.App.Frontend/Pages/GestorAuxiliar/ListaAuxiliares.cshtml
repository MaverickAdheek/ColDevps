@page
@model ParkinLot.App.Frontend.Pages.ListaAuxiliaresModel
@{
}
<body class="bodyaux">
<h1>Gestión de auxiliares</h1>
<p>En esta página podrás gestionar los auxiliares</p>
<a class="btn btn-primary table-btn" asp-page="./AgregarAuxiliar">Agregar auxiliar</a>
<!-- Botón para agregar un auxiliar -->
<table class="table" style="background-color:#33475b">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombres</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Documento</th>
            <th scope="col">Usuario</th>
            <th scope="col">Contraseña</th>
            <th scope="col">Código empleado</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    @foreach (var auxiliar in Model.Auxiliares)
    {
        <tr class="tr" >
            <td>@auxiliar.Nombres</td>
            <td>@auxiliar.Apellidos</td>
            <td>@auxiliar.Documento</td>
            <td>@auxiliar.Usuario</td>
            <td>@auxiliar.Contrasena</td>
            <td>@auxiliar.CodigoEmpleado</td>
            <td>
                <div class="btn-group">
                <a class="btn btn-secondary table-btn"  class="btn-space" asp-page="./DetalleAuxiliar"
                asp-route-CodigoEmpleado="@auxiliar.CodigoEmpleado">Ver más</a>
                <br>
                <a class="btn btn-secondary table-btn" class="btn-space" asp-page="./EditarAuxiliar"
                asp-route-CodigoEmpleado="@auxiliar.CodigoEmpleado">Editar</a>
                <a class="btn btn-secondary table-btn" class="btn-space" asp-page="./EliminarAuxiliar"
                asp-route-CodigoEmpleado="@auxiliar.CodigoEmpleado">Eliminar</a>
                </div>
            </td>
        </tr>

    }
</table>
</body>
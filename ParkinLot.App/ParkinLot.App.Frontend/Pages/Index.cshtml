@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body class="bodycar">

    <div class="text-center">
        <h1>ParkinLot</h1>
    </div>

    <div class="modal-dialog text-center">
        <div class="col-sm-10 main-section">
            <div class="modal-content">
                <form class="col-12">
                    <div class="form-group has-feedback">
                        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
                            rel="stylesheet" />
                        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
                            rel="stylesheet" />
                        <i class="fa fa-user form-control-feedback">
                        </i><input type="text" class="form-control" placeholder="Nombre de Usuario" />
                    </div>
                    <div class="form-group has-feedback ">
                        <i class="fa fa-unlock form-control-feedback"></i>
                        </i><input type="password" class="form-control" placeholder="Contraseña" />
                    </div>
                    <div class="btn-group">
                        <button type="submit " class="btn btn-secondary" class="btn-space"><i
                                class="fas fa-sign-in-alt"></i> Ingresar</button>
                        <button type="submit " class="btn btn-secondary" class="btn-space"><i
                                class="fas fa-sign-in-alt"></i> Registrarse</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
